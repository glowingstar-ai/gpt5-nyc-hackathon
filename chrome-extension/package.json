{
  "name": "gpt5-realtime-companion",
  "displayName": "GPT-5 Realtime Companion",
  "version": "0.0.1",
  "description": "Side panel to start a realtime GPT-5 conversation using OpenAI's WebRTC API.",
  "author": "chenyu zhang",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "name": "GPT-5 Realtime Companion",
    "description": "Start a realtime GPT-5 conversation from the Chrome side panel.",
    "version": "0.0.1",
    "action": {
      "default_title": "Open side panel"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "permissions": [
      "storage",
      "sidePanel",
      "tabs",
      "microphone"
    ],
    "optional_permissions": [
      "audioCapture"
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  }
}
